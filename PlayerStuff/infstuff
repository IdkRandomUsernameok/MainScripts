task.spawn(function()
    while task.wait() do
        game.Players.LocalPlayer.PlayerGui.MainGUI.Stamina.Value = math.huge
        game.Players.LocalPlayer.Character.Humanoid.Health = math.huge
        game.Players.LocalPlayer.PlayerGui.MainGUI.Hunger.Value = math.huge
        game.Players.LocalPlayer.PlayerGui.MainGUI.Sanity.Value = math.huge
    end
end)
